{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "samwise",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**", "$RESOURCE/*", "$RESOURCE/assets/*"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }

    },
    "windows": [
      {
        "title": "samwise",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; media-src 'self' asset: https://asset.localhost; img-src 'self' asset: https://asset.localhost"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "samwise",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["assets/*"]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/chandeldivyam/samwise/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDQ0IyNjVEQzI2QzkyN0IKUldSN2ttekNYU2JMVEdHcjNlZ2hhTzVuZkx3NktmSkgzMU5uTjZoVVdyL0k0MUNvYlN0WWh1ZSsK"
    }
  }
}
